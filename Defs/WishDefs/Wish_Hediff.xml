<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HDream.HediffWishDef Abstract="True" Name="BaseHediffWish">
	<wishClass>HDream.Wish_Hediff</wishClass>
    <endChancePerHour>
      <points>
        <li>(0, 0)</li>
        <li>(7, 0)</li>
        <li>(20, 1)</li>
        <li>(168, 0)</li>
        <li>(264, 0.04)</li>
        <li>(359, 0.1)</li>
        <li>(360, 1)</li>
      </points>
    </endChancePerHour>
	<upsetPerDay>4</upsetPerDay>
	<fulfillTought>WishHediffFulfilled</fulfillTought>
  </HDream.HediffWishDef>
  
  <HDream.BodyPartHediffWishDef ParentName="BaseHediffWish">
    <defName>WishReformBodyPart</defName>
	<wishClass>HDream.Wish_BodyPartHediff</wishClass>
	<tier>Desire</tier>
    <label>Replace missing body part</label>
    <descriptions>
      <li>Some part of my body is missing, it would be nice to find a replacement for them.</li>
	</descriptions>
	<description>To fullfill that wish, a missing body part of {Pawn} should be reestablish.
List :{BodyPart}</description>
	<shouldBeMissingBodyPart>true</shouldBeMissingBodyPart>
	<canReplaceNaturalPart>true</canReplaceNaturalPart>
	<tryFindHediff>true</tryFindHediff>
	<canBeBadHediff>false</canBeBadHediff>
	<wantSpecific>false</wantSpecific>
	<excludeIngredient>
		<li>WoodLog</li>
	</excludeIngredient>
	<traitFactor>
      <li>
		<trait>Transhumanist</trait>
		<factor>1.5</factor>
	  </li>
      <li>
		<trait>BodyPurist</trait>
		<factor>0</factor>
	  </li>
    </traitFactor>
    <baseChance>5</baseChance>
  </HDream.BodyPartHediffWishDef>
  
  <HDream.BodyPartHediffWishDef ParentName="BaseHediffWish">
    <defName>WishReformToNaturalPart</defName>
	<wishClass>HDream.Wish_BodyPartHediff</wishClass>
	<tier>Desire</tier>
    <label>Replace to natural part</label>
    <descriptions>
      <li>Some part of my body is missing or unatural, it would be nice to find a natural part for it.</li>
	</descriptions>
	<description>To fullfill that wish, a missing or unatural body part of {Pawn} should be reestablish.
List : {BodyPart}</description>
	<shouldBeMissingBodyPart>false</shouldBeMissingBodyPart>
	<tryFindHediff>true</tryFindHediff>
	<canBeBadHediff>false</canBeBadHediff>
	<wantSpecific>false</wantSpecific>
	<replaceToNaturalPart>true</replaceToNaturalPart>
	<traitFactor>
      <li>
		<trait>Transhumanist</trait>
		<factor>0</factor>
	  </li>
      <li>
		<trait>BodyPurist</trait>
		<factor>50</factor>
	  </li>
    </traitFactor>
    <baseChance>0.1</baseChance>
  </HDream.BodyPartHediffWishDef>
  
  <HDream.BodyPartHediffWishDef ParentName="BaseHediffWish">
    <defName>WishUpgradesPart</defName>
	<wishClass>HDream.Wish_BodyPartHediff</wishClass>
	<tier>Urge</tier>
    <label>Upgrades part</label>
    <descriptions>
      <li>Upgrades part.</li>
	</descriptions>
	<description>To fullfill that wish, {Amount} upgrades of {Pawn}'s body part should be done.
List :{BodyPart}
></description>
	<amountNeeded>3</amountNeeded>
	<shouldBeMissingBodyPart>false</shouldBeMissingBodyPart>
	<tryFindHediff>true</tryFindHediff>
	<canBeBadHediff>false</canBeBadHediff>
	<wantSpecific>false</wantSpecific>
	<canReplaceNaturalPart>true</canReplaceNaturalPart>
	<shouldBeAnUpgrade>true</shouldBeAnUpgrade>
	<traitFactor>
      <li>
		<trait>Transhumanist</trait>
		<factor>4</factor>
	  </li>
      <li>
		<trait>BodyPurist</trait>
		<factor>0</factor>
	  </li>
    </traitFactor>
    <baseChance>10</baseChance>
  </HDream.BodyPartHediffWishDef>
  
  <HDream.HediffWishDef ParentName="BaseHediffWish">
    <defName>WantJoywire</defName>
	<tier>Desire</tier>
    <label>Want joywire</label>
    <descriptions>
      <li>Want joywire.</li>
	</descriptions>
	<description>To fullfill that wish, {Pawn} need to have a Joywire installed.</description>
	<fulfillTought>WishJoywireFulfilled</fulfillTought>
	<hediffInfos>
		<li>
			<def>Joywire</def>
		</li>
	</hediffInfos>
    <baseChance>1</baseChance>
  </HDream.HediffWishDef>
  
  
  
</Defs>